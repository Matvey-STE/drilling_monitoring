<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:ehcache="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <ehcache:cache alias="User" uses-template="first"/>
    <ehcache:cache alias="WellData" uses-template="second"/>

    <ehcache:cache-template name="first">
        <ehcache:expiry>
            <ehcache:ttl>1000</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap>200</ehcache:heap>
    </ehcache:cache-template>

    <ehcache:cache-template name="second">
        <ehcache:expiry>
            <ehcache:ttl>1</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap>1</ehcache:heap>
    </ehcache:cache-template>

</config>